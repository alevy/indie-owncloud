{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/owncloud",
            "depends" : [
                "php",
                "php-apache",
                "php-gd"
            ],
            "apache2modules" : [
                "rewrite",
                "headers"
            ],
            "appconfigitems" : [
                {
                    "type" : "copyrecursive",
                    "names" : [
                        "3rdparty",
                        "apps",
                        "config",
                        "console.php",
                        "core",
                        "cron.php",
                        "db_structure.xml",
                        "files",
                        "index.html",
                        "index.php",
                        "l10n",
                        "lib",
                        "occ",
                        "ocs",
                        "public.php",
                        "remote.php",
                        "search",
                        "settings",
                        "status.php",
                        "themes",
                        "upgrade.php"
                    ],
                    "source" : "${package.codedir}/owncloud/$1",
                    "uname" : "root",
                    "gname" : "root",
                    "mode"  : "preserve"
                },
                {
                    "type"  : "directory",
                    "name"  : "${apache2.appconfig.datadir}/data",
                    "retention"       : "keep",
                    "retentionbucket" : "datadir",
                    "mode"  : "0750",
                    "uname" : "${apache2.uname}",
                    "gname" : "${apache2.gname}"
                },
                {
                    "type"  : "directory",
                    "name"  : "${apache2.appconfig.datadir}/config",
                    "retention"       : "keep",
                    "retentionbucket" : "configdir",
                    "mode"  : "0750",
                    "uname" : "www-data",
                    "gname" : "www-data"
                },
                {
                    "type"         : "file",
                    "name"         : "${apache2.appconfig.appconfigfragmentfile}",
                    "template"     : "tmpl/htaccess.tmpl",
                    "templatelang" : "varsubst"
                },
                {
                    "type"         : "perlscript",
                    "source"       : "bin/write-config.pl",
                }
            ],
            "triggersactivate" : [
                "apache2-restart"
            ],
            "installer" : {
                "type"   : "perlscript",
                "name"   : "bin/web-install.pl"
            }
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"       : "mysql-database",
                    "name"       : "maindb",
                    "retention"        : "keep",
                    "retentionbucket"  : "maindb",
                    "privileges" : "all privileges"
                }
            ]
        }
    },
    "customizationpoints" : {
        "adminlogin" : {
            "type"        : "string",
            "required"    : true,
            "default" : {
                "value" : "admin"
            }
        },
        "adminpass" : {
            "type"        : "password",
            "required"    : true
        }
    }
}
